<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#123456"
    android:padding="16dp"
    tools:context=".Register">

    <ImageView
        android:id="@+id/acc_icon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/account_circle"
        android:contentDescription="@string/acc_icon" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_icon"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corner"
        android:hint="@string/name"
        android:inputType="text"
        android:padding="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corner"
        android:text="@string/email"
        android:inputType="textEmailAddress"
        android:padding="18dp"
        android:textColor="#A0A0A0"
        android:textSize="20sp"
        android:enabled="false" />

    <Button
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:padding="18dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#E0E0E0"
        android:text="@string/password"
        android:gravity="start"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:drawableEnd="@drawable/arrow"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/rounded_corner"
        android:hint="@string/cellphone"
        android:inputType="phone"
        android:padding="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancel_btn"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button"
        android:padding="18dp"
        android:text="Save changes"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/rounded_button"
        android:padding="5dp"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textColorLink="#A20000"
        android:textSize="17sp"
        android:backgroundTint="#1A1D4D"/>

</RelativeLayout>