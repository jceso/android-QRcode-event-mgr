<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="!! WARNING !!"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/warning"
        android:layout_marginHorizontal="15dp"
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:text="Are you sure that you want to delete this profile?\nYou won't be able to use or activate it again and all the infos about your profile will be deleted permanently!"
        android:textSize="22sp"
        android:textStyle="italic"
        android:justificationMode="inter_word"
        android:textColor="@color/black" />



    <RelativeLayout
        android:id="@+id/infosLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_toStartOf="@+id/cancel_btn"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Yes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/negative"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="5dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="No"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/secondary"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>